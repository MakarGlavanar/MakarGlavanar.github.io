{
  "extends": "@rs/tsconfig",
  "compilerOptions": {
    "target": "ES2015",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false,
    "baseUrl": "./",
    "jsx": "react",
    "paths": {
      "@components/*": ["src/components/*"],
      "@pages/*": ["src/pages/*"],
      "@utils/*": ["src/utils/*"],
      "@services/*": ["src/services/*"],
      "@assets/*": ["src/assets/*"],
      "@scss/*": ["src/scss/*"],
      "@types/*": ["src/types/*"],
      "@registry/*": ["src/registry/*"],
      "@providers/*": ["src/providers/*"],
    }
  }
}
